<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caohouhong.festival"
    >
    <!--网络访问权限-->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--监听网络变化-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        >
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".me.MeActivity"/>
        <activity android:name=".ui.ChooseMsgActivity"/>
        <activity android:name=".ui.SendMsgActivity"/>
        <activity android:name=".ui.BrandActivity"/>
        <activity android:name=".ui.PercentViewActivity"/>
        <activity android:name=".ui.RecycleActivity"/>
    </application>

</manifest>